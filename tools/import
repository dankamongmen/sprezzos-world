#!/bin/sh

set -e || exit 1

for i in "$@" ; do
	[ -n "$i" ] || continue
	[ ! -e "packaging/$i" ] || { echo "packaging/$i already exists!" >&2 ; exit 1 ; }
	apt-get source "$i"
	# FIXME -- need to get source name from changelog now
	mkdir "packaging/$i"
	mv "$i"-*/debian "packaging/$i"
	rm -rf "$i"*
	git add "packaging/$i"
	cd "packaging/$i"
	../../tools/gnomeup
	uscan --verbose
	cd -
done
