-/^%MANPAGE/     {IN=1; USELP=NEEDLP=INTABLE=0; NAME=$2; next}
+/^%MANPAGE/     {IN=1; USELP=NEEDLP=0; NAME=$2; next}
 IN==0           {next}
 
 /^%MSKIP/	{SKIP=1;next}
