#!/bin/sh -e

# Debian Postfix prerm
# LaMont Jones <lamont@debian.org>

case "$1" in
    upgrade)
	;;

    deconfigure)
	;;

    remove)
	systemctl stop postfix || true
	rm -rf /var/spool/postfix/lib
	rm -rf /var/spool/postfix/etc
    	;;

    failed-upgrade)
	;;

    *)
	echo "prerm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac
#DEBHELPER#
exit 0
