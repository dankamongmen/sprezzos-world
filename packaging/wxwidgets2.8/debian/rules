		debian/$(package_gtk_dbg_py)/usr/lib/python$*/$(call py_sitename,$*)/$(wxsubdir)

	-find debian/$(package_gtk_dbg_py) -name '*_d.so'
	find debian/$(package_gtk_dbg_py) ! -type d ! -name '*.so' -delete
