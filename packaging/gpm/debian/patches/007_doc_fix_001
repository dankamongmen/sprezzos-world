 #! /usr/bin/awk -f
 # Copyright (c) 1998-2001 Alessandro Rubini
 
+function eat(pat, start, stop)
+{
+	N = split($0, arr, "@"pat"{");
+	res = arr[1];
+	for (i = 2; i <= N; i++) {
+		sub("}", stop, arr[i]);
+		res = res start arr[i];
+	}
+	$0 = res;
+}
+
