#!/bin/sh
# $Id$
# vim:ts=4:sw=4:expandtab:

set -e

if [ "$1" = "configure" ]
then
    # Convert empty directory into a symlink
    if [ ! -L /usr/share/doc/libopenexr-dev ]
    then
        rm -rf /usr/share/doc/libopenexr-dev
        ln -s /usr/share/doc/libopenexr7 /usr/share/doc/libopenexr-dev
    fi
fi

#DEBHELPER#

exit 0
