#!/usr/bin/make -f

#export DH_VERBOSE=1

%:
	dh $@ --parallel --with quilt

override_dh_auto_configure:
	./autogen.sh --without-downloader --with-fftw3 --with-fftw3-prefix=/usr/lib/x86_64-linux-gnu/
	dh_auto_configure -- --without-downloader --with-fftw3 --with-fftw3-prefix=/usr/lib/x86_64-linux-gnu/

override_dh_auto_install:
	rm -f debian/tmp/usr/bin/aacplusenc
	dh_auto_install

override_dh_strip:
	dh_strip --dbg-package libaacplus-dbg

override_dh_builddeb:
	dh_builddeb -- -Zbzip2
