#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

override_dh_auto_configure:
	./autogen.sh
	./configure --with-linux=/usr/src/linux-headers-3.7.2 --build=x86_64-linux-gnu --prefix=/ --includedir=/usr\${prefix}/include --mandir=/usr\${prefix}/share/man --infodir=/usr\${prefix}/share/info --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr\${prefix}/lib/zfs --disable-maintainer-mode --disable-dependency-tracking

override_dh_auto_test:

%:
	dh $@  --with autotools-dev,d-i
